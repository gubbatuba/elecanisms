env.Program('how_to_usb', ['how_to_usb.c',
                         '../lib/common.c',
                         '../lib/usb.c',
                         'usb_descriptors.c',
                         '../lib/timer.c',
                         '../lib/ui.c',
                         '../lib/pin.c',
                         '../lib/uart.c',
                        ]
           )


env.Hex('haptic')
env.Hex('haptic_spring')
env.Hex('haptic_damper')
env.Hex('haptic_texture')
env.Hex('haptic_wall')
env.List('haptic')
env.Hex('control')
env.List('control')
env.Hex('how_to_usb')
env.List('how_to_usb')